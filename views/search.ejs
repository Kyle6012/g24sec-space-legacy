
<link rel="stylesheet" href="/css/search.ejs.css">
<h2>Search Results:</h2>
<% if (users.length === 0) { %>
    <p>No users found</p>
<% } else { %>
    <ul class="user-list">
        <% users.forEach(user => { %>
            <li class="user-item">
                <a href="/profile/<%= user.username %>" class="user-link">
                    <div class="user-info">
                        <% if (user.profilePic) { %>
                            <img src="<%= user.profilePic %>" alt="<%= user.username %>'s profile picture" class="profile-pic">
                        <% } else { %>
                            <img src="/images/default.png" alt="Default profile picture" class="profile-pic">
                        <% } %>
                        <span class="username"><%= user.username %></span>
                    </div>
                </a>
            </li>
        <% }); %>
    </ul>
<% } %>
